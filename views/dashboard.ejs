<div class="mx-auto max-w-6xl px-6 py-12">
  <% if (message) { %>
    <div class="mb-8 rounded-md border border-green-900 bg-green-950/30 p-4 text-green-300">
      <%= message %>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="mb-8 rounded-md border border-red-900 bg-red-950/30 p-4 text-red-300">
      <%= error %>
    </div>
  <% } %>

  <section class="mb-16">
    <h1 class="mb-6 text-3xl font-bold tracking-tight text-zinc-100">What do you want to learn today?</h1>
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
      <% subjects.forEach(subject => { %>
        <a href="/quiz/<%= encodeURIComponent(subject.name) %>" class="group relative flex flex-col items-center justify-center gap-3 rounded-xl border border-zinc-800 bg-zinc-900/50 p-6 text-center transition-all hover:border-zinc-700 hover:bg-zinc-900">
          <span class="text-3xl"><%= subject.icon %></span>
          <span class="font-medium text-zinc-200"><%= subject.name %></span>
        </a>
      <% }) %>
    </div>
  </section>

  <section>
    <h2 class="mb-6 text-xl font-semibold text-zinc-100">My Learning</h2>
    <% if (courses && courses.length > 0) { %>
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <% courses.forEach(course => { %>
          <a href="/course/<%= course.id %>" class="block rounded-lg border border-zinc-800 bg-zinc-900/30 p-5 transition-colors hover:border-zinc-700 hover:bg-zinc-900/50">
            <div class="mb-2 flex items-start justify-between">
              <h3 class="font-semibold text-zinc-100"><%= course.topic %></h3>
              <span class="rounded-full border border-zinc-800 bg-zinc-900 px-2 py-0.5 text-xs text-zinc-400">
                <%= course.level || 'Beginner' %>
              </span>
            </div>
            <div class="mt-4 flex items-center justify-between text-sm text-zinc-500">
              <span>Progress: <%= course.progress || 0 %>%</span>
              <span><%= new Date(course.created_at).toLocaleDateString() %></span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="rounded-lg border border-dashed border-zinc-800 p-12 text-center text-zinc-500">
        No courses yet. Start learning by picking a subject above.
      </div>
    <% } %>
  </section>
</div>
