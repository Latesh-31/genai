<div class="mx-auto max-w-6xl px-6 py-12">
  <% if (message) { %>
    <div class="mb-8 rounded-md border border-green-900 bg-green-950/30 p-4 text-green-300">
      <%= message %>
    </div>
  <% } %>
  <% if (error) { %>
    <div class="mb-8 rounded-md border border-red-900 bg-red-950/30 p-4 text-red-300">
      <%= error %>
    </div>
  <% } %>

  <!-- Gamification Header -->
  <section class="mb-12 flex items-center justify-between rounded-xl border border-zinc-800 bg-zinc-900/50 p-6">
    <div class="flex items-center gap-8">
      <div class="flex items-center gap-3">
        <span class="text-3xl">üî•</span>
        <div>
          <div class="text-xs font-medium text-zinc-400">Streak</div>
          <div class="text-2xl font-bold text-green-400"><%= user.streak_days || 0 %></div>
          <div class="text-xs text-zinc-500">days</div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-3xl">üíé</span>
        <div>
          <div class="text-xs font-medium text-zinc-400">Total XP</div>
          <div class="text-2xl font-bold text-purple-400"><%= (user.total_xp || 0).toLocaleString() %></div>
          <div class="text-xs text-zinc-500">points</div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-3xl">üõ°Ô∏è</span>
        <div>
          <div class="text-xs font-medium text-zinc-400">Rank</div>
          <div class="text-2xl font-bold text-yellow-400">
            <% if ((user.total_xp || 0) >= 5000) { %>
              Master
            <% } else if ((user.total_xp || 0) >= 2000) { %>
              Apprentice
            <% } else { %>
              Novice
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="text-right">
      <div class="text-sm font-medium text-zinc-200">Welcome back!</div>
      <div class="text-xs text-zinc-400"><%= user.name %></div>
    </div>
  </section>

  <!-- Resume Learning Section -->
  <% if (courses && courses.length > 0) { %>
    <section class="mb-12">
      <div class="mb-6 flex items-center justify-between">
        <h2 class="text-2xl font-bold tracking-tight text-zinc-100">Resume Learning</h2>
        <span class="text-sm text-zinc-500"><%= courses.length %> in progress</span>
      </div>
      
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <% courses.forEach(course => { %>
          <a href="/course/<%= course.id %>" class="group block rounded-lg border border-zinc-800 bg-zinc-900/30 p-5 transition-all hover:border-zinc-700 hover:bg-zinc-900/50 hover:shadow-indigo-500/10 hover:shadow-lg">
            <div class="mb-2 flex items-start justify-between">
              <h3 class="font-semibold text-zinc-100"><%= course.topic %></h3>
              <span class="rounded-full border border-zinc-800 bg-zinc-900 px-2 py-0.5 text-xs text-zinc-400">
                <%= course.level || 'Beginner' %>
              </span>
            </div>
            <div class="mt-4 flex items-center justify-between text-sm text-zinc-500">
              <span>Progress: <%= course.progress || 0 %>%</span>
              <span class="flex items-center gap-1">
                <span class="h-2 w-2 animate-pulse rounded-full bg-green-400"></span>
                In Progress
              </span>
            </div>
          </a>
        <% }) %>
      </div>
    </section>
  <% } %>

  <!-- Explore New Topics Section -->
  <section class="mb-16">
    <h1 class="mb-6 text-3xl font-bold tracking-tight text-zinc-100">What do you want to learn today?</h1>
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4">
      <% subjects.forEach(subject => { %>
        <% 
          // Check if user is already learning this subject
          const isLearning = courses.some(course => course.topic === subject.name);
          if (!isLearning) {
        %>
          <a href="/quiz/<%= encodeURIComponent(subject.name) %>" class="group relative flex flex-col items-center justify-center gap-3 rounded-xl border border-zinc-800 bg-zinc-900/50 p-6 text-center transition-all hover:border-zinc-700 hover:bg-zinc-900 hover:shadow-indigo-500/10 hover:shadow-lg hover:transform hover:-translate-y-1">
            <span class="text-3xl"><%= subject.icon %></span>
            <span class="font-medium text-zinc-200"><%= subject.name %></span>
          </a>
        <% } %>
      <% }) %>
    </div>
  </section>

  <section>
    <h2 class="mb-6 text-xl font-semibold text-zinc-100">My Learning</h2>
    <% if (courses && courses.length > 0) { %>
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <% courses.forEach(course => { %>
          <a href="/course/<%= course.id %>" class="block rounded-lg border border-zinc-800 bg-zinc-900/30 p-5 transition-colors hover:border-zinc-700 hover:bg-zinc-900/50">
            <div class="mb-2 flex items-start justify-between">
              <h3 class="font-semibold text-zinc-100"><%= course.topic %></h3>
              <span class="rounded-full border border-zinc-800 bg-zinc-900 px-2 py-0.5 text-xs text-zinc-400">
                <%= course.level || 'Beginner' %>
              </span>
            </div>
            <div class="mt-4 flex items-center justify-between text-sm text-zinc-500">
              <span>Progress: <%= course.progress || 0 %>%</span>
              <span><%= new Date(course.created_at).toLocaleDateString() %></span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="rounded-lg border border-dashed border-zinc-800 p-12 text-center text-zinc-500">
        No courses yet. Start learning by picking a subject above.
      </div>
    <% } %>
  </section>
</div>
