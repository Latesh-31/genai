<div class="mx-auto max-w-2xl px-6 py-12">
  <div class="mb-8">
    <a href="/dashboard" class="text-sm text-zinc-500 hover:text-zinc-300">&larr; Back to Dashboard</a>
    <h1 class="mt-4 text-3xl font-bold text-zinc-100">Diagnostic Assessment: <%= subject %></h1>
    <p class="mt-2 text-zinc-400">Complete this short quiz to personalize your learning path.</p>
  </div>

  <form action="/quiz/submit" method="POST" class="space-y-8">
    <% quiz.forEach((q, qIdx) => { %>
      <div class="rounded-xl border border-zinc-800 bg-zinc-900/50 p-6">
        <h3 class="mb-4 text-lg font-medium text-zinc-200"><span class="mr-2 text-zinc-500"><%= qIdx + 1 %>.</span> <%= q.question %></h3>
        <div class="space-y-3">
          <% q.options.forEach((opt, oIdx) => { %>
            <label class="flex cursor-pointer items-start gap-3 rounded-lg border border-zinc-800 p-3 hover:bg-zinc-800/50">
              <input type="radio" name="q<%= qIdx %>" value="<%= oIdx %>" class="mt-1 text-indigo-600 focus:ring-indigo-500" required>
              <span class="text-zinc-300"><%= opt %></span>
            </label>
          <% }) %>
        </div>
      </div>
    <% }) %>

    <div class="flex justify-end pt-4">
      <button type="submit" class="rounded-md bg-indigo-600 px-6 py-2.5 font-medium text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-zinc-900">
        Submit Assessment
      </button>
    </div>
  </form>
</div>
