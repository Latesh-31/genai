<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof course !== 'undefined' ? course.topic : 'Course' %> | AdaptLearn AI</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/lucide-static@0.321.0/font/lucide.min.css" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <style>
        /* SCROLLBARS */
        .custom-scrollbar::-webkit-scrollbar { width: 5px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #09090b; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #27272a; border-radius: 10px; }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover { background: #3f3f46; }
        
        /* TYPOGRAPHY */
        .prose p { margin-bottom: 1rem; color: #d4d4d8; line-height: 1.7; }
        .prose strong { color: #fff; font-weight: 600; }
        .prose ul { list-style-type: disc; padding-left: 1.5rem; margin-bottom: 1rem; color: #d4d4d8; }
        .prose code { background: #27272a; padding: 0.2rem 0.4rem; border-radius: 4px; color: #a5b4fc; font-family: monospace; }
        .prose pre { background: #18181b; padding: 1rem; border-radius: 0.5rem; overflow-x: auto; margin-bottom: 1rem; }
    </style>
</head>

<body class="fixed inset-0 z-50 bg-black text-zinc-200 h-screen w-screen flex flex-row overflow-hidden font-sans">

    <script id="course-data" type="application/json">
        <%- JSON.stringify(course) %>
    </script>

    <aside class="w-80 flex-none border-r border-zinc-800 bg-zinc-900 flex flex-col h-full z-30">
        
        <div class="p-5 border-b border-zinc-800 shrink-0">
            <a href="/dashboard" class="flex items-center text-xs text-zinc-500 hover:text-white mb-3 transition uppercase tracking-widest font-bold">
                <i class="lucide-arrow-left w-3 h-3 mr-1"></i> Dashboard
            </a>
            <h1 class="text-lg font-bold text-white leading-tight truncate"><%= course.topic %></h1>
            <div class="text-xs text-zinc-500 mt-1"><%= course.level %> Track</div>
        </div>
        
        <nav class="flex-1 overflow-y-auto custom-scrollbar p-3 space-y-6">
            <% course.syllabus.forEach((module, mIndex) => { %>
                <div class="module-group">
                    <div class="px-2 mb-2 flex items-center justify-between">
                        <span class="text-[10px] font-bold uppercase tracking-widest text-indigo-400">
                            Module <%= mIndex + 1 %>
                        </span>
                    </div>
                    <h3 class="text-sm font-semibold text-zinc-300 px-2 mb-2 leading-tight opacity-90"><%= module.title %></h3>

                    <div class="pl-2 border-l border-zinc-800 ml-2 space-y-1">
                        <% if (module.topics && module.topics.length > 0) { %>
                            <% module.topics.forEach((topicName, tIndex) => { %>
                                <button 
                                    class="topic-btn w-full text-left px-3 py-2 rounded-md text-sm transition flex items-center group hover:bg-zinc-800 text-zinc-400 hover:text-white relative"
                                    data-module="<%= mIndex %>" 
                                    data-topic="<%= tIndex %>"
                                >
                                    <span class="truncate"><%= topicName %></span>
                                </button>
                            <% }) %>
                        <% } %>
                        
                        <button 
                            class="quiz-btn w-full text-left px-3 py-2 mt-2 rounded-md text-xs font-bold flex items-center text-indigo-400 hover:bg-indigo-500/10 transition border border-dashed border-zinc-800 hover:border-indigo-500/50"
                            data-module="<%= mIndex %>"
                        >
                            <i class="lucide-trophy w-3 h-3 mr-2"></i> Module Quiz
                        </button>
                    </div>
                </div>
            <% }) %>
        </nav>
    </aside>

    <main class="flex-1 flex flex-col h-full relative bg-black min-w-0 z-10">
        
        <div class="h-14 border-b border-zinc-800 bg-zinc-900/50 flex items-center justify-between px-6 shrink-0 backdrop-blur-md">
            <span class="text-sm font-medium text-white truncate" id="active-title">Loading Lesson...</span>
            <div class="w-32 h-1 bg-zinc-800 rounded-full overflow-hidden">
                <div id="lesson-progress" class="h-full bg-indigo-500 transition-all duration-300" style="width: 0%"></div>
            </div>
        </div>

        <div class="flex-1 overflow-y-auto custom-scrollbar p-8 relative" id="main-scroll">
            <div class="max-w-3xl mx-auto pb-24">
                
                <div id="content-area" class="min-h-[50vh]">
                    <div class="animate-pulse space-y-6 mt-10">
                        <div class="h-8 bg-zinc-800 rounded w-3/4"></div>
                        <div class="h-4 bg-zinc-900 rounded w-full"></div>
                        <div class="h-4 bg-zinc-900 rounded w-5/6"></div>
                        <div class="h-64 bg-zinc-900 rounded-xl border border-zinc-800 mt-8"></div>
                    </div>
                </div>

            </div>
        </div>

        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black via-black to-transparent pointer-events-none">
            <div class="max-w-3xl mx-auto flex justify-between pointer-events-auto">
                <button id="btn-prev" class="hidden px-4 py-2 bg-zinc-900 text-zinc-300 rounded-lg text-sm font-medium border border-zinc-800 hover:bg-zinc-800 transition">
                    Previous
                </button>
                <button id="btn-next" class="hidden px-6 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-500 shadow-lg shadow-indigo-500/20 transition flex items-center">
                    Next <i class="lucide-arrow-right w-4 h-4 ml-2"></i>
                </button>
            </div>
        </div>

    </main>

    <script>
        // Setup
        mermaid.initialize({ startOnLoad: false, theme: 'dark' });
        lucide.createIcons();

        const courseData = JSON.parse(document.getElementById('course-data').textContent);
        let currentLesson = null;
        let cardIndex = 0;

        document.addEventListener('DOMContentLoaded', () => {
            // Sidebar Clicks
            document.querySelectorAll('.topic-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    const m = parseInt(btn.dataset.module);
                    const t = parseInt(btn.dataset.topic);
                    loadTopic(m, t);
                });
            });

            // Nav Clicks
            document.getElementById('btn-prev').addEventListener('click', () => {
                if(cardIndex > 0) { cardIndex--; renderCard(); }
            });
            document.getElementById('btn-next').addEventListener('click', () => {
                if(currentLesson && cardIndex < currentLesson.cards.length - 1) {
                    cardIndex++; renderCard();
                }
            });

            // Auto-load first topic
            if (courseData.syllabus && courseData.syllabus.length > 0) {
                loadTopic(0, 0); 
            }
        });

        // Load Topic Function
        async function loadTopic(mIdx, tIdx) {
            // UI Updates
            document.querySelectorAll('.topic-btn').forEach(b => b.classList.remove('bg-zinc-800', 'text-white'));
            const activeBtn = document.querySelector(`.topic-btn[data-module="${mIdx}"][data-topic="${tIdx}"]`);
            if(activeBtn) activeBtn.classList.add('bg-zinc-800', 'text-white');

            const container = document.getElementById('content-area');
            const topicName = courseData.syllabus[mIdx].topics[tIdx];
            document.getElementById('active-title').innerText = topicName;

            // Skeleton Loader
            container.innerHTML = `
                <div class="animate-pulse space-y-6 mt-10">
                    <div class="h-8 bg-zinc-800 rounded w-3/4"></div>
                    <div class="h-4 bg-zinc-900 rounded w-full"></div>
                    <div class="h-4 bg-zinc-900 rounded w-5/6"></div>
                    <div class="h-64 bg-zinc-900 rounded-xl border border-zinc-800 mt-8"></div>
                </div>`;
            
            document.getElementById('btn-next').classList.add('hidden');
            document.getElementById('btn-prev').classList.add('hidden');

            try {
                // Fetch Lesson
                const res = await fetch(`/course/${courseData.id}/lesson/${mIdx}/${tIdx}`);
                const data = await res.json();
                if(data.error) throw new Error(data.error);

                currentLesson = data;
                cardIndex = 0;
                renderCard();

            } catch (err) {
                console.error(err);
                container.innerHTML = `<div class="p-4 text-red-400 text-center">Failed to load lesson. <br><button onclick="loadTopic(${mIdx}, ${tIdx})" class="underline mt-2">Retry</button></div>`;
            }
        }

        // Render Card Function
        function renderCard() {
            const container = document.getElementById('content-area');
            const card = currentLesson.cards[cardIndex];
            const total = currentLesson.cards.length;

            document.getElementById('lesson-progress').style.width = `${((cardIndex+1)/total)*100}%`;

            let html = '';

            if(card.type === 'text') {
                html = `
                    <div class="animate-in fade-in slide-in-from-bottom-4 duration-500">
                        <h2 class="text-3xl font-bold text-white mb-6">${currentLesson.title}</h2>
                        <div class="prose prose-invert prose-lg text-zinc-300">
                            ${marked.parse(card.content)}
                        </div>
                    </div>`;
            } else if (card.type === 'chart') {
                html = `
                    <div class="animate-in fade-in zoom-in-95">
                        <h3 class="text-xl font-bold text-white mb-4">Visual Concept</h3>
                        <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 flex justify-center">
                            <div class="mermaid">${card.content}</div>
                        </div>
                    </div>`;
            } else if (card.type === 'quiz') {
                html = `
                    <div class="mt-10 p-6 bg-indigo-500/10 border border-indigo-500/20 rounded-xl">
                        <span class="text-indigo-400 text-xs font-bold uppercase mb-2 block">Quick Check</span>
                        <h3 class="text-xl font-bold text-white mb-4">${card.question}</h3>
                        <div class="space-y-2">
                            ${card.options.map(opt => `
                                <button onclick="this.classList.add(this.innerText.includes('${card.answer}') ? 'bg-green-500/20' : 'bg-red-500/20')" 
                                class="w-full text-left p-3 rounded-lg bg-zinc-900 hover:bg-zinc-800 border border-zinc-800 transition">
                                    ${opt}
                                </button>
                            `).join('')}
                        </div>
                    </div>`;
            }

            container.innerHTML = html;
            if(card.type === 'chart') setTimeout(() => mermaid.init(undefined, document.querySelectorAll('.mermaid')), 100);

            const prev = document.getElementById('btn-prev');
            const next = document.getElementById('btn-next');
            prev.classList.remove('hidden');
            next.classList.remove('hidden');

            if(cardIndex === 0) prev.classList.add('hidden');
            if(cardIndex === total - 1) next.innerHTML = "Finish Topic";
            else next.innerHTML = `Next <i class="lucide-arrow-right w-4 h-4 ml-2 inline"></i>`;
        }
    </script>
</body>
</html>